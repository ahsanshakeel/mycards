@model IEnumerable<MyCard.Web.Models.POListViewModel>
@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ExportView</title>
</head>
<body>
    <div>

        <table class="table table-striped table-bordered table-condensed">
            <tr>
                @*<th>@Html.Label("Order ID")</th>*@
                <th>Company Name</th>
                <th>Email</th>
                <th>Order No</th>
                <th>Date</th>
                <th>Quantity</th>
                <th>License Type</th>
                <th>Order Total</th>
                <th>Invoice Hardcopy</th>
                <th>Status</th>
                <th>Remarks</th>
            </tr>

            @foreach (MyCard.Web.Models.POListViewModel item in Model)
            {
                <tr>
                    @Html.HiddenFor(model => item.ID)

                    <td>@item.CompanyName </td>
                    <td>@item.Email</td>
                    <td>@item.OrderNumber</td>
                    <td>@item.PODate</td>
                    <td>@item.Quantity</td>
                    <td>@item.LicenseTypeName</td>
                    <td>@item.OrderTotal</td>
                    <td>@item.SendInvoice</td>
                    @if (item.Approved == 0)
                    {
                        <td>Pending</td>
                    }
                    else if (item.Approved == 1)
                    {
                        <td>Approved</td>
                    }
                    else
                    {
                        <td>Rejected</td>
                    }
                    <td>@item.RejectReason</td>

                </tr>
            }
        </table>

    </div>
</body>
</html>
