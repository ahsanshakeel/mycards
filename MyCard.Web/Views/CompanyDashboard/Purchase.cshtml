@model MyCard.Web.Models.PurchaseLicenseViewModel
@{
    ViewBag.Title = @MyCard.Web.Resources.CaptionsAll.PurchaseLicense;
    Layout = "~/Views/Shared/_MasterLayoutPurchase.cshtml";
}

<div class="col-xs-12 m-top2">
