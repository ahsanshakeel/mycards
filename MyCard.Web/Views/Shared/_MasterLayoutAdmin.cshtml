<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title		|		My Cards</title>

    <!-- Bootstrap -->

    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css">

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    @*<script src="~/Scripts/jquery-1.12.4.min.js"></script>*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/App.js"></script>




    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>
<body style="background:#FFFFFF;">
    @Html.Partial("_LeftPanel")
    <div class="col-xs-8 pull-right ">
        <div class="col-xs-12">
            <div class="m-both">
                <nav class="nav-tabs mar-left20 mar-right20">
                    <div class="row">
                        <div class="collapse navbar-collapse mar-top20" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav navbar-left">
                                @if (ViewBag.PageType == "Register")
                                {
                                    <li><a class="active nav-item f-p" href="@Url.Action("Index", "Registration")">@MyCard.Web.Resources.CaptionsAll.NavBarRegister</a> </li>
                                }
                                else
                                {
                                    <li><a class="active nav-item f-p" href="@Url.Action("Login", "CompanyDashboard")">@MyCard.Web.Resources.CaptionsAll.NaveBarSignIn</a> </li>
                                }
                                
                            </ul>
                            @if (Request.IsAuthenticated)
                            {
                                <div class="navbar-form navbar-right signout-top">
                                    @if (!string.IsNullOrEmpty(User.Identity.Name))
                                    {
                                        <a class=" pull-right btn btn-default signin medium f-p" href="@Url.Action("Logout", "CompanyDashboard")">@MyCard.Web.Resources.CaptionsAll.NaveBarSignOut</a>
                                    }
                                    
                                </div>
                            }
                                                         
                        </div>
                    </div>
                </nav>
            </div>
       </div>
            <div class=" col-xs-12 register-top">
                <div id="divRegForm" class="signin-form ">
                    @RenderBody()
                </div>
            </div>
    <div class="clearfix"></div>
    @Html.Partial("_Footer")
</div>
  
</body>
</html>

