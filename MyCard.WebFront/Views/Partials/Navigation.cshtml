@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    var mediaItem = Model.Content.GetPropertyValue<IPublishedContent>("companyLogo",true);
    var siteroot = Model.Content.AncestorOrSelf(1);
}
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
            <a href="/"><img class="img-responsive-logo" alt="logo" src="@mediaItem.Url"></a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse mar-top15" id="bs-example-navbar-collapse-1">

            <form class="navbar-form navbar-right mar-top10">
                <button class="btn btn-default signin bold" type="submit">Sign In</button>
            </form>
            <ul class="nav navbar-nav navbar-right">
                @{
                    if (siteroot.Descendants() != null)
                    {
                        var descendents = siteroot.Descendants().ToList();
                        foreach (var node in descendents)
                        {
                            <li><a href="@node.Url">@node.Name</a> </li>
                        }
                    }
                }
                <li><a href="#footer">Contact Us</a> </li>

            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>